{
    "compilerOptions": {
      "target": "ESNext",
      "module": "Preserve",
      "types": ["node"],
      "moduleDetection": "force",
      "allowJs": true,
  
      /* Bundler mode */
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": true,
      "verbatimModuleSyntax": true,
      "noEmit": true,
  
      /* Linting */
      "skipLibCheck": true,
      "strict": true,
      "noFallthroughCasesInSwitch": true,
      "forceConsistentCasingInFileNames": true
    }
  }
  